{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/index",
        "destination": "/index.html"
      },
      {
        "source": "/price",
        "destination": "/price.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/portfolio",
        "destination": "/portfolio.html"
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy-policy.html"
      },
      {
        "source": "/service",
        "destination": "/service.html"
      },
      {
        "source": "/animationVideo",
        "destination": "/animationVideo.html"
      },
      {
        "source": "/liveActionVideo",
        "destination": "/liveActionVideo.html"
      },
      {
        "source": "/interviewVideo",
        "destination": "/interviewVideo.html"
      },
      {
        "source": "/snsVideo",
        "destination": "/snsVideo.html"
      }
    ],
    "headers": [
      {
        "source": "/postMail",
        "headers": [
          {
            "key" : "Content-Type",
            "value" : "text/html; charset=Shift_JIS"
          }
        ]
      }
    ]

  }
}
