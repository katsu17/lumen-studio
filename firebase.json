{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/index",
        "destination": "/index.html"
      },
      {
        "source": "/price",
        "destination": "/price.html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/portfolio",
        "destination": "/portfolio.html"
      },
      {
        "source": "/privacy-policy",
        "destination": "/privacy-policy.html"
      }

    ]

  }
}
